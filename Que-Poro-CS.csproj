<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <RootNamespace>QuePoro</RootNamespace>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>


    <Target Name="CopyFiles" AfterTargets="AfterBuild">
        <Copy SourceFiles=".env" DestinationFolder="$(OutputPath)"/>
    </Target>

    <ItemGroup>
      <PackageReference Include="DisCatSharp" Version="10.6.7" />
      <PackageReference Include="DisCatSharp.Analyzer.Roselyn" Version="6.2.5">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
      <PackageReference Include="DisCatSharp.ApplicationCommands" Version="10.6.7" />
      <PackageReference Include="DisCatSharp.Lavalink" Version="10.6.7" />
      <PackageReference Include="dotenv.net" Version="3.2.1" />
      <PackageReference Include="Npgsql" Version="9.0.2" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Database\Types\" />
    </ItemGroup>

</Project>
